<%# locals: (topics: []) -%>
<div class="container mx-auto">

<% if topics.any? %>
  <ul class="grid grid-cols-4 md:grid-cols-6">
    <% topics.each do |topic| %>
      <li class="rounded-md border border-gray-200 bg-white p-3">
        <%= link_to topic_path(topic), class:"font-medium text-gray-900 hover:text-gray-600 flex flex-col gap-2", data: { turbo_frame: "_top" }  do %>
          <%= topic.name  %>
          <div>
            <p class="flex items-center gap-x-2 text-sm text-gray-500"><%= phosphor_icon "pencil-line", class: "h-4 w-4 text-blue-500" %>  <%= topic.user.name  %> </p>
          </div>
          <div class="flex gap-1 justify-left items-center text-xs text-gray-500">
            <%= phosphor_icon "eye", class: "h-4 w-4 text-blue-500" %>15k
            <%= phosphor_icon "star", class: "h-4 w-4 text-yellow-500" %>100
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
</div>
