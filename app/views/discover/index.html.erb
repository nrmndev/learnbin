



<section class="bg-center bg-no-repeat bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/conference.jpg')] bg-gray-700 bg-blend-multiply">
    <div class="px-4 mx-auto max-w-screen-xl text-center py-12 lg:py-12">
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl">Feed Your Curiosity, Expand Your Mind</h1>
        <p class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48">Search Topics That Spark Your Curiosity.</p>
        <div class="max-w-128 mx-auto flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
          <%= simple_form_for :search, url: discover_index_path,
              method: :get, html: { data: { turbo_frame: "topics_search" },
              wrapper: false, class:"flex flex-row gap-4 w-full" } do |f| %>
            <%= f.input :q, wrapper: false, label: false, input_html: {class: "border border-white rounded-xl text-white p-3"} %>
            <%= f.button :submit, "Search" %>
          <% end %>

        </div>
    </div>
</section>

<%= turbo_frame_tag "topics_search" do %>
<div class="container mx-auto my-4">
  <ul class="grid grid-cols-4 md:grid-cols-6 gap-3">
      <li class="rounded-md border border-gray-200 bg-white p-3">
        <a href="#" class="font-medium text-gray-900 hover:text-gray-600 flex flex-col gap-2">
          Ruby on Rails
          <div>
            <p class="flex items-center gap-x-2 text-sm text-gray-500"><%= phosphor_icon "pencil-line", class: "h-4 w-4 text-blue-500" %>  Norman </p>
          </div>
          <div class="flex gap-1 justify-left items-center text-xs text-gray-500">
            <%= phosphor_icon "eye", class: "h-4 w-4 text-blue-500" %>15k
            <%= phosphor_icon "star", class: "h-4 w-4 text-yellow-500" %>100
          </div>
        </a>
      </li>
      <li class="rounded-md border border-gray-200 bg-white p-3">
        Ruby on Rails by Norman
      </li>
  </ul>
  </div>
  <%= render "discover/search_results", topics: @topics   %>
<% end %>
