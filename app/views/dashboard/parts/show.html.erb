<% content_for :above do %>
  <%= render "dashboard/shared/archives_top_menu"  %>
<% end %>

<%= render "dashboard/shared/layout" do %>
    <%= render "shared/breadcrumbs", links: [
      { text: "All Parts", url: dashboard_parts_path },
      { text: @part.title}
    ]
  %>
  <%= render "dashboard/shared/title", title: @part.title %>
<div class="container mx-auto">
    <%= simple_form_for [:dashboard, @part] do |f| %>
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
        <div class="col-span-2">
          <%= render "dashboard/parts/show/form_part", f:f  %>
        </div>

        <div class="col-span-1">
          <%= render "dashboard/parts/show/add_to_posts", f:f %>
        </div>
      </div>
    </div>
  <%# END OF SIMPLE_FORM%>
  <% end %>
</div>
<% end %>
