<%= simple_form_for @topic, url: dashboard_topic_path(@topic) do |f| %>
  <%= f.input :title %>
  <%= f.input :slug %>
  <%= f.input :description %>
  <%= f.input :category_id, collection: Category.all, label_method: :title, input_html: { disabled: @topic.persisted? }, include_blank: false %>
  <%= f.submit %>
<% end %>
