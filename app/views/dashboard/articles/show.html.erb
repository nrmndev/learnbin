<div class="bg-indigo-600 p-5 -mb-[50px] min-h-[150px]">
  <div class="container mx-auto">
    <%= render "shared/breadcrumbs", links: [
      { text: @article.topic.category.name, url: dashboard_category_path(@article.topic.category_id) },
      { text: @article.topic.name, url: dashboard_category_topic_path(@article.topic.category_id, @article.topic_id) },
      { text: @article.title}
      ]
    %>

      <div class="flex justify-start">
      <h2 class="text-white mt-3 text-3xl grow"><%= @article.title  %></h2>
      <button command="show-modal" commandfor="dialog" class="inline-flex items-center gap-x-1.5 rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 border border-white cursor-pointer">
        <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5">
          <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
        </svg>
        Add Section to <%= @article.title  %>
      </button>
    </div>
</div>

  </div>
<div class="container mx-auto">
<div class="grid grid-cols-1 lg:grid-cols-3 gap-2">
  <div class="col-span-2">
    <div class="p-4">
      <%= simple_form_for [@topic, @article] do |f| %>
        <%= f.input :title %>
        <%= f.input :slug %>
        <div class="rounded-md bg-white px-3 pt-2.5 pb-1.5 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 mb-2 string optional topic_name">
          <label class="block text-xs font-medium text-gray-900 string optional block text-sm/6 font-medium text-gray-900 mb-2" for="topic_name">Description</label>
          <div data-controller="tinymce" class="mb-2">
            <%= f.text_area :summary, rows: 15, data: { tinymce_target: "textarea" } %>
          </div>
        </div>
        <%= f.submit class: "cursor-pointer rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% end %>
    </div>
  </div>
  <div class="col-span-1">
    <div class="p-5 rounded-sm bg-[#f6f6f6]">
      <h2><%= @article.title  %> Sections</h2>

      <ul role="list" class="mt-3 grid grid-cols-1 gap-5 ">
        <% @article.sections.order(:position).each do |section|  %>
        <li class="col-span-1 flex rounded-md shadow-xs">
          <%# <div class="flex w-16 shrink-0 items-center justify-center rounded-l-md bg-pink-600 text-sm font-medium text-white">GA</div> %>
          <div class="flex w-full rounded-r-md border border-gray-200 bg-white">
            <div class="flex w-full justify-between px-4 py-2 text-sm">
              <div>
                <%= link_to section.heading, dashboard_category_topic_article_section_path(@category, @topic, @article, section),
                  class:"font-medium text-gray-900 hover:text-gray-600 "%>
                  <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500">
                    <p class="whitespace-nowrap">Tags</p>
                    <svg viewBox="0 0 2 2" class="size-0.5 fill-current">
                      <circle r="1" cx="1" cy="1" />
                    </svg>
                    <p class="truncate mt-0.5 rounded-md bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 inset-ring inset-ring-green-600/20">Enhancement</p>
                  </div>
              </div>

              <div class="self-end flex gap-2">
                <% unless section.first? %>
                  <%= button_to "↑",
                    move_up_dashboard_category_topic_article_section_path(@category, @topic, @article, section),
                    method: :patch,
                    class: "bg-indigo-600 text-white px-2.5 py-1 rounded-full text-xl" %>
                <% end %>
                <% unless section.last? %>
                  <%= button_to "↓",
                    move_down_dashboard_category_topic_article_section_path(@category, @topic, @article, section),
                    method: :patch,
                    class: "bg-indigo-600 text-white px-2.5 py-1 rounded-full text-xl" %>
                <% end %>
                <el-dropdown class="relative flex justify-center items-center">
                  <button class="relative block text-gray-500 hover:text-gray-900">
                    <span class="absolute -inset-2.5"></span>
                    <span class="sr-only">Open options</span>
                    <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5">
                      <path d="M10 3a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM10 8.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM11.5 15.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z" />
                    </svg>
                  </button>
                <el-menu anchor="bottom end" popover class="w-32 origin-top-right rounded-md bg-white py-2 shadow-lg outline-1 outline-gray-900/5 transition transition-discrete [--anchor-gap:--spacing(2)] data-closed:scale-95 data-closed:transform data-closed:opacity-0 data-enter:duration-100 data-enter:ease-out data-leave:duration-75 data-leave:ease-in">
                  <%= button_to 'Delete', dashboard_category_topic_article_section_path(@category, @topic, @article, section), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "block px-3 py-1 text-sm/6 text-gray-900 focus:bg-gray-50 focus:outline-hidden" %>
                </el-menu>
              </el-dropdown>
                </div>
            </div>
            <%# <div class="shrink-0 pr-2">
              <button type="button" class="inline-flex size-8 items-center justify-center rounded-full text-gray-400 hover:text-gray-500 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-600">
                <span class="sr-only">Open options</span>
                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5">
                  <path d="M10 3a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM10 8.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM11.5 15.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z" />
                </svg>
              </button>
            </div>
             %>

          </div>
        </li>
        <% end  %>
      </ul>
      <li class="flex items-center justify-between gap-x-6 py-5">
    <div class="min-w-0">
      <div class="flex items-start gap-x-3">
        <p class="text-sm/6 font-semibold text-gray-900">GraphQL API</p>
      </div>
      <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500">
        <p class="whitespace-nowrap">Tags</p>
        <svg viewBox="0 0 2 2" class="size-0.5 fill-current">
          <circle r="1" cx="1" cy="1" />
        </svg>
        <p class="truncate mt-0.5 rounded-md bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 inset-ring inset-ring-green-600/20">Enhancement</p>
      </div>
    </div>
    <div class="flex flex-none items-center gap-x-4">
      <el-dropdown class="relative flex-none">
        <button class="relative block text-gray-500 hover:text-gray-900">
          <span class="absolute -inset-2.5"></span>
          <span class="sr-only">Open options</span>
          <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5">
            <path d="M10 3a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM10 8.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM11.5 15.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z" />
          </svg>
        </button>
        <el-menu anchor="bottom end" popover class="w-32 origin-top-right rounded-md bg-white py-2 shadow-lg outline-1 outline-gray-900/5 transition transition-discrete [--anchor-gap:--spacing(2)] data-closed:scale-95 data-closed:transform data-closed:opacity-0 data-enter:duration-100 data-enter:ease-out data-leave:duration-75 data-leave:ease-in">
          <a href="#" class="block px-3 py-1 text-sm/6 text-gray-900 focus:bg-gray-50 focus:outline-hidden">Delete<span class="sr-only">, GraphQL API</span></a>
        </el-menu>
      </el-dropdown>
    </div>
  </li>
    </div>
  </div>
</div>

</div>


  <%= render 'shared/modal' do %>
    <%= render 'dashboard/sections/form'  %>
  <% end %>


