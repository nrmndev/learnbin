<div class="bg-indigo-600 p-5 -mb-[50px] min-h-[150px]">
  <div class="container mx-auto">
    <%= render "shared/breadcrumbs", links: [
      { text: @section.article.topic.category.name, url: dashboard_category_path(@section.article.topic.category) },
      { text: @section.article.topic.name, url: dashboard_category_topic_path(@section.article.topic.category_id, @section.article.topic_id)  },
      { text: @section.article.title, url: dashboard_category_topic_article_path(@section.article.topic.category_id, @section.article.topic_id,@section.article_id)  },
      { text: @section.heading }
      ]
    %>

    <h2 class="text-white mt-3 text-3xl"><%= @section.heading  %></h2>
  </div>
</div>
<div class="container mx-auto">
  <%= simple_form_for [@topic, @article, @section] do |f| %>
    <%= f.input :heading %>
    <div class="rounded-md bg-white px-3 pt-2.5 pb-1.5 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 mb-2 string optional topic_name">
      <label class="block text-xs font-medium text-gray-900 string optional block text-sm/6 font-medium text-gray-900 mb-2" for="topic_name">Description</label>
      <div data-controller="tinymce" class="mb-2">
        <%= f.text_area :content, rows: 15, data: { tinymce_target: "textarea" } %>
      </div>
    </div>
    <%= f.submit class: "cursor-pointer rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  <% end %>
</div>

