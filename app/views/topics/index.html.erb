<div class="mb-5">

  <div class="mt-2 md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl/7 font-bold text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight dark:text-white">Topics</h2>
    </div>
    <div class="mt-4 flex shrink-0 md:mt-0 md:ml-4">
     <%= link_to 'New Topic', new_category_topic_path(Category.first), class: 'ml-3 inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500' %>
    </div>
  </div>
</div>


<div class="divide-y divide-gray-200 overflow-hidden rounded-lg shadow-sm gap-2 sm:grid sm:grid-cols-2 sm:divide-y-0 dark:divide-white/10 dark:bg-gray-900 dark:shadow-none dark:outline dark:-outline-offset-1 dark:outline-white/20">
  <% @topics.each do |topic| %>
  <div class="group relative rounded-tl-lg rounded-tr-lg border-gray-200 bg-white p-6 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 sm:rounded-tr-none sm:odd:not-nth-last-2:border-b sm:even:border-l sm:even:not-last:border-b dark:border-white/10 dark:bg-gray-800/50 dark:focus-within:outline-indigo-500">
    <div>
      <span class="inline-flex rounded-lg bg-teal-50 p-3 text-teal-700 dark:bg-teal-500/10 dark:text-teal-400">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
          <path d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </span>
    </div>
    <div class="mt-8">
      <h3 class="text-base font-semibold text-gray-900 dark:text-white">
        <%= link_to topic_path(topic) do %>
          <!-- Extend touch target to entire panel -->
          <span aria-hidden="true" class="absolute inset-0"></span>
          <%= topic.name %>
        <% end %>
      </h3>
      <%# <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Doloribus dolores nostrum quia qui natus officia quod et dolorem. Sit repellendus qui ut at blanditiis et quo et molestiae.</p> %>
    </div>
    <span aria-hidden="true" class="pointer-events-none absolute top-6 right-6 text-gray-300 group-hover:text-gray-400 dark:text-gray-500 dark:group-hover:text-gray-200">
      <svg viewBox="0 0 24 24" fill="currentColor" class="size-6">
        <path d="M20 4h1a1 1 0 00-1-1v1zm-1 12a1 1 0 102 0h-2zM8 3a1 1 0 000 2V3zM3.293 19.293a1 1 0 101.414 1.414l-1.414-1.414zM19 4v12h2V4h-2zm1-1H8v2h12V3zm-.707.293l-16 16 1.414 1.414 16-16-1.414-1.414z" />
      </svg>
    </span>
  </div>
  <% end %>
</div>


